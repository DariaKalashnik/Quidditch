<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/poup">

    <TextView
        android:id="@+id/grifwon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        style="@style/WinnerText" />

    <ImageView
        android:id="@+id/winnwrcup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cup"
        android:layout_marginTop="@dimen/width"
        android:layout_below="@+id/grifwon"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="@dimen/threehundred"
        android:layout_height="@dimen/twohundred"
        android:src="@drawable/silvester"
        android:layout_above="@+id/winnwrcup"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView" />


</RelativeLayout>